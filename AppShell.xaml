<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Toppers_Pizza.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Toppers_Pizza.Pages"
    Shell.BackgroundColor="DarkGoldenrod"
    xmlns:toolKit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Behaviors>
        <toolKit:StatusBarBehavior StatusBarColor="DarkGoldenrod"
                                   StatusBarStyle="LightContent"></toolKit:StatusBarBehavior>

    </Shell.Behaviors>

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
      <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
</Shell>

