<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOnline.Login.SignUp"
             Title="SignUp">

     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

  <Label Text="Create New Account" HorizontalOptions="Center" 
                   TextColor="#2196F3" FontSize="24" Margin="0,30,0,0" />

        <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
            <Entry  x:Name="NameEntry" Placeholder="Please Enter a Username" PlaceholderColor="Black" WidthRequest="350"/>
                        <Entry  x:Name="EmailEntry" Placeholder="Please Enter a Email ID" PlaceholderColor="Black" WidthRequest="350"/>

            <Entry  x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"  PlaceholderColor="Black"/>

              <Button Text="Create a new Account" TextColor="White" BackgroundColor="#2196F3" 
                    CornerRadius="30" HeightRequest="50" WidthRequest="200" 
                    Clicked="OnSignupClicked" /> 
           
        </StackLayout>
    </Grid>
</ContentPage>