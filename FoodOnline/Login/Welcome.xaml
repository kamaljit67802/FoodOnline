<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOnline.Login.Welcome"
             Title="Welcome"
             >
    <ScrollView>
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Text="Welcome to Food Online App!" 
               HorizontalOptions="Center" VerticalOptions="Center" 
               FontSize="20" TextColor="#2196F3" />

        <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
           
            <Button Text="Sign Up" TextColor="White" BackgroundColor="#2196F3" 
                    CornerRadius="30" HeightRequest="60" WidthRequest="200" 
                    Clicked="OnMySignUpClicked" />

            <Label Text="" HorizontalOptions="Center" 
                   TextColor="#2196F3" FontSize="24" Margin="0,30,0,0" />
            <Button Text="Login" TextColor="White" BackgroundColor="#2196F3" 
                    CornerRadius="30" HeightRequest="60" WidthRequest="200" 
                    Clicked="OnMyLoginClicked" /> 
        </StackLayout>
    </Grid>
</ScrollView>
    </ContentPage>




    

