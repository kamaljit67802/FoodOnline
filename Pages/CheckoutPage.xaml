<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Toppers_Pizza.Pages.CheckoutPage"
             Title="Checkout">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="25">

        <Image x:Name="img" Source="check"
               HeightRequest="150"
               WidthRequest="150"
               Scale="0">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="Green">


                </toolkit:IconTintColorBehavior>

            </Image.Behaviors> 

        </Image>

        <Label x:Name="msg" Text="Order has been Placed"
               FontAttributes="Bold"
               FontSize="30"
               TextColor="Green"
               Scale="0"></Label>
        <Button x:Name="homebtn"
                Text="Explore More"
                BackgroundColor="DarkGoldenrod"
                CornerRadius="22"
                HorizontalOptions="Center"
                Padding="50,10"
                Scale="0"
                Opacity="0"
                Clicked="homebtn_Clicked"></Button>
      
    </VerticalStackLayout>
</ContentPage>
